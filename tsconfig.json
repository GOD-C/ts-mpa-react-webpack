{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "~": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}